{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|css|js|woff2|woff)",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=604800"
          }
        ]
      }
    ]
  }
}
